@model IEnumerable<SIMSWebApp.DatabaseContext.Entities.ClassRoom>
@{
	ViewData["Title"] = "Course Classes";
	Layout = "_LayoutMain";
	var course = ViewBag.Course as SIMSWebApp.DatabaseContext.Entities.Course;
}
<div class="container-fluid px-4">
	<h2 class="mt-4">Classes in Course: @course?.CourseCode - @course?.CourseName</h2>
	<ol class="breadcrumb mb-4">
		<li class="breadcrumb-item"><a asp-controller="Teacher" asp-action="Index">Dashboard</a></li>
		<li class="breadcrumb-item"><a asp-controller="Teacher" asp-action="MyCourses">My Courses</a></li>
		<li class="breadcrumb-item active">Course Classes</li>
	</ol>
	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
	}
	@if (TempData["SuccessMessage"] != null)
	{
		<div class="alert alert-success">@TempData["SuccessMessage"]</div>
	}
	<div class="card mb-4">
		<div class="card-header bg-primary text-white">
			<i class="fas fa-school me-1"></i>
			Classes in @course?.CourseCode
		</div>
		<div class="card-body">
			@if (!Model.Any())
			{
				<p class="text-muted">No classes are assigned to this course.</p>
			}
			else
			{
				<table class="table table-bordered table-striped" id="classesTable">
					<thead>
						<tr>
							<th>Class Code</th>
							<th>Class Name</th>
							<th>Department</th>
							<th>Academic Year</th>
							<th>Main Teacher</th>
							<th style="width:180px;">Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var c in Model)
						{
							<tr>
								<td>@c.ClassCode</td>
								<td>@c.ClassName</td>
								<td>@c.Department</td>
								<td>@c.AcademicYear</td>
								<td>
									@if (c.Teacher != null)
									{
										@(c.Teacher.TeacherCode + " - " + c.Teacher.User.FullName)
									}
									else
									{
										<span class="text-muted">Not assigned</span>
									}
								</td>
								<td>
									<!-- Removed Students link as per requirement -->
								</td>
							</tr>
						}
					</tbody>
				</table>
			}
		</div>
	</div>
</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#classesTable').DataTable({
				responsive: true
			});
		});
	</script>
}
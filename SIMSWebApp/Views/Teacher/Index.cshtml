@model SIMSWebApp.Models.DashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = "_LayoutMain";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Teacher Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.AssignedCourses</h4>
                            <div>Assigned Courses</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Teacher" asp-action="MyCourses">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.TotalStudentsInCourses</h4>
                            <div>Total Students</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-graduation-cap fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Teacher" asp-action="MyClassStudents">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Department</h4>
                            <div>Department</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-building fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Teacher" asp-action="Profile">View Profile</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Specialization</h4>
                            <div>Specialization</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-star fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Teacher" asp-action="Profile">View Profile</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-chart-area me-1"></i>
                    Quick Actions
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Teacher" asp-action="MyCourses" class="btn btn-outline-primary w-100">
                                <i class="fas fa-book me-2"></i>My Courses
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Teacher" asp-action="MyClassStudents" class="btn btn-outline-success w-100">
                                <i class="fas fa-graduation-cap me-2"></i>My Students
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Teacher" asp-action="MyCourses" class="btn btn-outline-warning w-100">
                                <i class="fas fa-chart-line me-2"></i>Enter Grades
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Teacher" asp-action="MyCourses" class="btn btn-outline-info w-100">
                                <i class="fas fa-file-alt me-2"></i>View Courses
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-table me-1"></i>
                    Teacher Information
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td><strong>Welcome:</strong></td>
                                    <td>@Model.UserName</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@Model.UserEmail</td>
                                </tr>
                                <tr>
                                    <td><strong>Role:</strong></td>
                                    <td><span class="badge bg-warning">@Model.UserRole</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Department:</strong></td>
                                    <td>@Model.Department</td>
                                </tr>
                                <tr>
                                    <td><strong>Specialization:</strong></td>
                                    <td>@Model.Specialization</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model SIMSWebApp.Models.GradeViewModel
@{
    ViewData["Title"] = "Add Grade";
    Layout = "_LayoutMain";
    var student = ViewBag.Student;
    var classRoom = ViewBag.ClassRoom;
}

<div class="container-fluid px-4">
    <h2 class="mt-4">Add Grade for @student.User.FullName</h2>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Teacher" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Teacher" asp-action="MyClassStudents">My Classes</a></li>
        <li class="breadcrumb-item"><a asp-controller="Teacher" asp-action="ClassStudents" asp-route-classId="@ViewBag.ClassId">Class Students</a></li>
        <li class="breadcrumb-item"><a asp-controller="Teacher" asp-action="ClassStudentGrades" asp-route-classId="@ViewBag.ClassId" asp-route-studentId="@ViewBag.StudentId">Student Grades</a></li>
        <li class="breadcrumb-item active">Add Grade</li>
    </ol>

    <div class="alert alert-info">
        <h5>Student Information</h5>
        <p><strong>Student Code:</strong> @student.StudentCode | <strong>Class:</strong> @student.Class | <strong>Major:</strong> @student.Major</p>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-plus-circle me-1"></i>
            Add New Grade
        </div>
        <div class="card-body">
            <form asp-action="AddClassGrade" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="TeacherId" />
                <input type="hidden" name="ClassId" value="@ViewBag.ClassId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CourseId" class="control-label">Course</label>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="GradeType" class="control-label">Grade Type</label>
                            <select asp-for="GradeType" class="form-select">
                                <option value="">-- Select Type --</option>
                                <option value="Midterm">Midterm</option>
                                <option value="Final">Final</option>
                                <option value="Assignment">Assignment</option>
                                <option value="Project">Project</option>
                                <option value="Quiz">Quiz</option>
                            </select>
                            <span asp-validation-for="GradeType" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Score" class="control-label">Score (0-100)</label>
                            <input asp-for="Score" class="form-control" type="number" min="0" max="100" step="0.1" />
                            <span asp-validation-for="Score" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="GradingDate" class="control-label">Grading Date</label>
                            <input asp-for="GradingDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="GradingDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comments" class="control-label">Comments</label>
                    <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Save Grade
                    </button>
                    <a asp-action="ClassStudentGrades" asp-route-classId="@ViewBag.ClassId" asp-route-studentId="@ViewBag.StudentId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Grades
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
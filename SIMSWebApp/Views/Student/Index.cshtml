@model SIMSWebApp.Models.DashboardViewModel
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "_LayoutMain";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Student Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Welcome to your student portal. Here you can view your courses, grades, and academic information.
    </div>
    
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.EnrolledCourses</h4>
                            <div>Enrolled Courses</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-book fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Student" asp-action="MyCourses">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.AverageGrade.ToString("F1")</h4>
                            <div>Average Grade</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-controller="Student" asp-action="MyGrades">View Details</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Class</h4>
                            <div>Class</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <div class="small text-white">Class Info</div>
                    <div class="small text-white"><i class="fas fa-info-circle"></i></div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@Model.Major</h4>
                            <div>Major</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-graduation-cap fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <div class="small text-white">Major Info</div>
                    <div class="small text-white"><i class="fas fa-info-circle"></i></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-bolt me-1"></i>
                    Quick Actions
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Student" asp-action="Profile" class="btn btn-outline-primary w-100">
                                <i class="fas fa-user me-2"></i>My Profile
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Student" asp-action="MyCourses" class="btn btn-outline-success w-100">
                                <i class="fas fa-book me-2"></i>My Courses
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Student" asp-action="MyGrades" class="btn btn-outline-warning w-100">
                                <i class="fas fa-chart-line me-2"></i>My Grades
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Student" asp-action="Transcript" class="btn btn-outline-info w-100">
                                <i class="fas fa-file-alt me-2"></i>Transcript
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-id-card me-1"></i>
                    Student Information
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td><strong>Welcome:</strong></td>
                                    <td>@Model.UserName</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@Model.UserEmail</td>
                                </tr>
                                <tr>
                                    <td><strong>Role:</strong></td>
                                    <td><span class="badge bg-success">@Model.UserRole</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Class:</strong></td>
                                    <td>@Model.Class</td>
                                </tr>
                                <tr>
                                    <td><strong>Major:</strong></td>
                                    <td>@Model.Major</td>
                                </tr>
                                <tr>
                                    <td><strong>Enrollment Date:</strong></td>
                                    <td>@Model.EnrollmentDate.ToString("MM/dd/yyyy")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model SIMSWebApp.Models.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_LayoutMain";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Admin Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Overview</li>
    </ol>

    <!-- KPI Tiles -->
    <div class="row">
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Users</div>
                        <div class="display-6">@Model.TotalUsers</div>
                    </div>
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <a asp-controller="Admin" asp-action="Users" class="card-footer text-white text-decoration-none">Manage Users</a>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Students</div>
                        <div class="display-6">@Model.TotalStudents</div>
                    </div>
                    <i class="fas fa-user-graduate fa-2x"></i>
                </div>
                <a asp-controller="Admin" asp-action="Students" class="card-footer text-white text-decoration-none">Manage Students</a>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card bg-warning text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Teachers</div>
                        <div class="display-6">@Model.TotalTeachers</div>
                    </div>
                    <i class="fas fa-chalkboard-teacher fa-2x"></i>
                </div>
                <a asp-controller="Admin" asp-action="Teachers" class="card-footer text-white text-decoration-none">Manage Teachers</a>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card bg-secondary text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Classes</div>
                        <div class="display-6">@Model.TotalClasses</div>
                    </div>
                    <i class="fas fa-layer-group fa-2x"></i>
                </div>
                <a asp-controller="Admin" asp-action="Classes" class="card-footer text-white text-decoration-none">Manage Classes</a>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Courses</div>
                        <div class="display-6">@Model.TotalCourses</div>
                    </div>
                    <i class="fas fa-book fa-2x"></i>
                </div>
                <a asp-controller="Admin" asp-action="Courses" class="card-footer text-white text-decoration-none">Manage Courses</a>
            </div>
        </div>
        <div class="col-xl-2 col-md-4 col-6 mb-4">
            <div class="card bg-dark text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fw-bold">Enrollments</div>
                        <div class="display-6">@Model.TotalEnrollments</div>
                    </div>
                    <i class="fas fa-user-plus fa-2x"></i>
                </div>
                <a asp-controller="Admin" asp-action="Enrollments" class="card-footer text-white text-decoration-none">Manage Enrollments</a>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-bolt me-1"></i>
            Quick Actions
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="Admin" asp-action="CreateStudent" class="btn btn-outline-success w-100">
                        <i class="fas fa-user-plus me-2"></i>Add Student
                    </a>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="Admin" asp-action="CreateCourse" class="btn btn-outline-info w-100">
                        <i class="fas fa-plus me-2"></i>Add Course
                    </a>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="Admin" asp-action="CreateClass" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-plus-circle me-2"></i>Add Class
                    </a>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <a asp-controller="Admin" asp-action="EnrollClass" class="btn btn-outline-dark w-100">
                        <i class="fas fa-layer-group me-2"></i>Enroll Class to Course
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- System Info -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            System Information
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td><strong>Welcome:</strong></td>
                            <td>@Model.UserName</td>
                        </tr>
                        <tr>
                            <td><strong>Email:</strong></td>
                            <td>@Model.UserEmail</td>
                        </tr>
                        <tr>
                            <td><strong>Role:</strong></td>
                            <td><span class="badge bg-primary">@Model.UserRole</span></td>
                        </tr>
                        <tr>
                            <td><strong>Total Admins:</strong></td>
                            <td>@Model.TotalAdmins</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

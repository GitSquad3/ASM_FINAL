@model IEnumerable<SIMSWebApp.DatabaseContext.Entities.Student>
@{
	ViewData["Title"] = "Students";
	Layout = "_LayoutMain";
}
<div class="container-fluid px-4">
	<h1 class="mt-4">Students</h1>
	@if (TempData["ErrorMessage"] != null)
	{
		<div class="alert alert-danger">@TempData["ErrorMessage"]</div>
	}
	@if (TempData["SuccessMessage"] != null)
	{
		<div class="alert alert-success">@TempData["SuccessMessage"]</div>
	}
	<div class="mb-3">
		<a asp-action="CreateStudent" class="btn btn-primary">Add Student</a>
	</div>
	<div class="card mb-4">
		<div class="card-body">
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Code</th>
						<th>Name</th>
						<th>Email</th>
						<th>Class</th>
						<th>Major</th>
						<th>Enrollment</th>
						<th style="width:180px;">Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var s in Model)
					{
						<tr>
							<td>@s.StudentCode</td>
							<td>@s.User.FullName</td>
							<td>@s.User.Email</td>
							<td>@s.Class</td>
							<td>@s.Major</td>
							<td>@s.EnrollmentDate.ToString("yyyy-MM-dd")</td>
							<td>
								<a asp-action="EditStudent" asp-route-id="@s.StudentID" class="btn btn-sm btn-outline-warning me-2">Edit</a>
								<form asp-action="DeleteStudent" asp-route-id="@s.StudentID" method="post" class="d-inline" onsubmit="return confirm('Delete this student?');">
									<button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
								</form>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
